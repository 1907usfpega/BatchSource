package com.revature.assignment1;

/**
 * Assignment #1 Question 12
 *Write a program to store numbers from 1 to 100 in an array. Print out all the even numbers
 *from the array. Use the enhanced FOR loop for printing out the numbers.
 * 
 * @author Kyle Kolstad
 *
 * 
 */
public class EnhancedForLoop {
	
	//Data Variables
	private int [] array;
	
	/**
	 * Default Constructor
	 */
	public EnhancedForLoop() {	
		
	}
	
	 /**
	  * 
	  * @param startIndex
	  * @param endIndex
	  */
	public void createArray(int startIndex, int endIndex) { 
		array = new int[endIndex];
		for(int i = 0; i < endIndex; i++) {
			array[i] = startIndex; //
			startIndex++;
		}	
	}
	
	/**
	 * 
	 */
	public void printEvenNumbers() {
		for (int number : array) {
			if(number % 2 == 0) { //if divisible by 2 then the number is even and will be printed to the console
				System.out.println(number);
			}
		}
	}
}
